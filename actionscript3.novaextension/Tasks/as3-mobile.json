			{
				"key": "as3.task.commandLine",
				"title": "Command line arguments",
				"type": "string"
			},
			{
				"key": "as3.task.mainApplicationPath",
				"title": "Publisher ID",
				"type": "string"
			},
			{
				"key": "as3.task.profile",
				"title": "Profile",
				"type": "enum",
