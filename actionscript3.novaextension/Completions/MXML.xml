<?xml version="1.0" encoding="UTF-8"?>
<completions>
	<provider name="mxml">
		<syntax>mxml</syntax>
		<selector>*</selector>
		<expression>\b[a-zA-Z0-9-_]*</expression>
		<set>mxml.entities</set>
	</provider>

	<!-- Entities -->
	<set name="mxml.entities" symbol="tag">
		<behavior variables="true" suffix="(?!&gt;)">
			<append>&gt;$[]&lt;/${completion}&gt;</append>
		</behavior>
	</set>
</completions>
